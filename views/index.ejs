<%- include ('partials/header') %>
<div class="ui grid">
    <div class="four wide column">
        <div class="ui vertical fluid tabular menu">
            <a href="/blogs" class="item active"> Home </a>
            <a href="/blogs/new" class="item"> New Blog </a>
        </div>
    </div>

    <div class="ui container main text centered">
       
        <div class="ui top attached segment">
            <div class="ui divided items">
                <div class="ui huge header">
                    Blog App
                </div>
                <% blogs.forEach(function(blog) {%>
                    <div class="item">
                        <img class="ui small bordered circular image " src="<%= blog.image %>" alt="blog image">
                        <div class="content"> 
                            <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                            <div class="meta">
                                <span><%= blog.created.toDateString() %></span>
                            </div>
                            <div class="description">
                                <p><%- blog.content.substring(0,100) %>...</p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                                    Read More
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>
    </div>
</div>



<%- include ('partials/footer')%>
<%-include ('partials/header')%>
<div class="ui grid">
    <div class="four wide column">
        <div class="ui vertical fluid tabular menu">
            <a href="/blogs" class="item "> Home </a>
            <a href="/blogs/new" class="item active"> New Blog </a>
        </div>
    </div>
    <div class="ui main text  container segment">
        <div class="ui huge header">New Blog</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label>Title </label>
                <input type="text" name="blog[title]" placeholder="Titel">
            </div>
            <div class="field">
                <label>Image </label>
                <input type="text" name="blog[image]" placeholder="Image URL">
            </div>
            <div class="field">
                <label>Blog Content </label>
                <textarea name="blog[content]" placeholder="Content"></textarea>
            </div>
            <input class="ui inverted big blue button" type="submit" value="Create">
        </form>
    </div>
</div>

<%-include ('partials/footer')%>
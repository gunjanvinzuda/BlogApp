<%-include ('partials/header')%>
<div class="ui grid">
    <div class="four wide column">
        <div class="ui vertical fluid tabular menu">
            <a href="/blogs" class="item "> Home </a>
            <a href="/blogs/new" class="item"> New Blog </a>
        </div>
    </div>
    <div class="ui main text container segment">
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        <div class="ui top attached">
            <div class="item">
                <img  class="ui fluid image centered rounded" src="<%= blog.image %>" alt="blog image">
                <div class="content"><b><%= blog.created.toDateString() %></b></div>
                <div class="description">
                    <p><%- blog.content %></p>
                </div>
            </div>
            <a class="ui blue inverted button" href="/blogs/<%= blog.id %>/edit">Edit</a>
            <form id="deleteForm" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
                <button class="ui red inverted button" >Delete</button>
            </form>
        </div>
    </div>
</div>
<%-include ('partials/footer')%>